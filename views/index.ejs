<main class="w-11/12 mx-auto">
	<div>
		<h1 class="font-bold text-center text-3xl">Available Books</h1>
	</div>
	<div class="grid grid-cols-[2fr_8fr]">
		<div>
			<p>Category</p>
			<ul>
				<li>Action and Adventure</li>
				<li>Classics</li>
				<li>Detective and Mystery</li>
			</ul>
		</div>
		<div class="grid grid-cols-5">
			<% books.forEach(book => { %>
			<a href="" class="book flex justify-center items-center flex-col py-6 rounded bg-slate-300 text-black">
				<img class="mb-6" src="<%= book.cover %>" alt="<%= book.title %>" />
				<h3 class="book-title"><%= book.title %></h3>
			</a>
			<% }) %>
		</div>
	</div>
</main>
